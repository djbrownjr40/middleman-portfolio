<div id="projects" class="section">
<div class="row my-5">
  <div class="col-12">
    <div class="container">
        <h2 class="section overpass-bold pb-3">Projects</h2>
        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="card-product">
              <div class="title">
                <h2 class="overpass"><%= project.name %></h2>
                <div class="links">
                  <% link_to project.url, class: 'external-link', target: '_blank' do %>
                    <i class="fa-solid fa-up-right-from-square" style="color: #12263A;"></i>
                  <% end %>
                  <% link_to project.gh, class: 'external-link', target: '_blank' do %>
                    <i class="fa-brands fa-square-github fa-lg" style="color: #12263A;"></i>
                  <% end %>
                </div>
              </div>
              <div class="images">
                <%= image_tag project.image, alt: "project image" %>
              </div>
              <div class="about-section">
                <h3 class="overpass mt-2 mb-3">ABOUT</h3>
                <p class="overpass"><%= project.description %></p>
              </div>
              <div class="stack">
                <h3 class="overpass mt-2 mb-3">STACK</h3>
                <!-- Add your stack information here -->
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
