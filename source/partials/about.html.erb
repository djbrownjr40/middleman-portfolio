  <div class="col-md-4 mb-4 p-3">
    <p class="noto-serif mb-4">Hi, I'm Dennis.</p>
    <div  class="image">
      <%= image_tag 'images/about.jpg', alt: 'About me', width: '100%', height: '340px' %>
    </div>
  </div>
  <div class="col-md-4 mb-4 p-3">
